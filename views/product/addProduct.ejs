<%- include('../shared/header.ejs') %>
</head>
<body>
<%- include('../shared/navbar.ejs') %>

    <div class="container">
        <div class="row">
            <div class="col-6 mx-auto">
                <h1>Add product</h1>
                <% if (errorMessage.length > 0) { %>
                    <div class="alert alert-danger">
                        <%= errorMessage %>
                    </div>
                <% } %>
                <form action="/products/add-product" method="post">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" id="title" name="title" aria-describedby="titleHelp"
                               value="<%= previousInput.title %>">
                    </div>
                    <div class="form-group">
                        <label for="image">Image</label>
                        <input type="text" class="form-control" name="imagePath" id="image" value="<%= previousInput.imagePath %>">
                    </div>
                    <div class="form-group">
                        <label for="price">Price</label>
                        <input type="number" min="0" step="0.01" class="form-control" name="price" id="price"
                               value="<%= previousInput.price %>">
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea class="form-control" id="description" rows="3" name="description"> <%= previousInput.description %>
                        </textarea>
                    </div>
                    <input type="hidden" name="user" value="<%= user._id %>">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>

<%- include('../shared/footer.ejs') %>
