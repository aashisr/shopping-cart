<%- include('shared/header.ejs') %>
</head>
    <body>
        <%- include('shared/navbar.ejs') %>

        <div class="container">
            <% if (products.length > 0) {  %>
                <div class="row">
                    <% products.forEach(function (product) { %>
                        <div class="col-4 grid">
                            <article class="card">
                                <a class="product-link" href="products/details/<%= product._id %>">
                                    <header class="card-header text-center">
                                        <h2 class="product-title"><%= product.title %></h2>
                                    </header>
                                    <div class="card-image text-center">
                                        <img class="img-fluid"
                                             src="<%= product.imagePath %>"
                                             alt="<%= product.title %>"
                                            height="150" width="150">
                                    </div>
                                    <div class="card-content">
                                        <%# mongoose-currency stores the currency in cents by multiplying by 100 %>
                                        <h2 class="product-price text-center">â‚¬ <%= product.price/100 %></h2>
                                        <p class="product-description"><%= product.description %></p>
                                    </div>
                                </a>
                                <div class="p-2 text-center">
                                    <% if (isAdmin) { %>
                                        <a href="/products/edit/<%= product._id %>"><button class="btn btn-success">Edit</button></a>
                                        <a href="/products/delete/<%= product._id %>"><button class="btn btn-success">Delete</button></a>
                                    <% } %>
                                </div>
                            </article>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <h1>No products found</h1>
            <% } %>
        </div>

    <%- include('shared/footer.ejs') %>
