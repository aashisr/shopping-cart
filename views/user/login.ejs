<%- include('../shared/header.ejs') %>
</head>
<body>
<%- include('../shared/navbar.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-6 mx-auto">
            <h1>Login</h1>
            <% if (successMessage.length > 0) { %>
                <div class="alert alert-success">
                    <%= successMessage %>
                </div>
            <% } %>
            <% if (errorMessage.length > 0) { %>
                <div class="alert alert-danger">
                    <%= errorMessage %>
                </div>
            <% } %>
            <form action="/users/login" method="post">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" id="email" name="email" class="form-control" value="<%= previousInput.email %>">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control" value="<%= previousInput.password %>">
                </div>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div>
                    <button type="submit" class="btn btn-primary">Login</button>
                    <a class="float-right" href="/users/reset-password">Forgot Password ?</a>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../shared/footer.ejs') %>
